<div class="navbar navbar-expand-sm navbar-light navbar-lewagon flex-grow-0">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", style: 'width:15%;' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active hover-padding-left">
            <%= link_to "Accueil", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active hover-padding-left">
            <%= link_to "Mes réservations", dashboard_path, class: "nav-link" %>
          </li>
          <li class="nav-item hover-padding-left">
             <%=link_to "Réserver un Pal", pals_path, class:"nav-link" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <% if current_user.photo.attached? %>
             <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "" %>
             <% else %>
             <%= image_tag "photopardefaut.png", class: "avatar", alt: "" %>
           <% end %>

          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mon profil", new_pal_path, class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item hover-padding-left">
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
