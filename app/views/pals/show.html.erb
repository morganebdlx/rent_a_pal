<div class="titles"><h2>Et c'est un match 😍</h2>
  </div>

<div class="row center-flex">
  <div class="col-5">
    <div class="card-product">
      <% if @pal.user.photo.attached? %>
             <%= cl_image_tag @pal.user.photo.key, class: "avatar", alt: "" %>
             <% else %>
             <%= image_tag "photopardefaut.png", class: "avatar", alt: "" %>
           <% end %>
      <div class="card-product-infos">
        <h2><%= @pal.user.username %></h2>
        <p class="card-text">Son age : <%= @pal.user.age %> ans, </p>
        <p class="card-text">Lieu de rencontre : <%= @pal.user.city %> </p>
        <p class="card-text">Hobby préféré : <%= @pal.user.hobby %> </p>
        <p class="card-text">Prix : <%= @pal.price %> €</p>
          <div class="card-body">
            <h5 class="card-title"></h5>
            <a href="/dashboard" class="btn btn-primary mt-5">Book this Pal 😊</a>
          </div>
      </div>
    </div>
  </div>
</div>
